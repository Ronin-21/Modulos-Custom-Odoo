<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_move_form_reception" model="ir.ui.view">
        <field name="name">account.move.form.reception</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <!-- Smart button 'Recepciones' -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_open_receptions"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-truck"
                        invisible="move_type != 'in_invoice'">
                    <field name="picking_count" widget="statinfo" string="Recepciones"/>
                </button>
            </xpath>

        </field>
    </record>

</odoo>
