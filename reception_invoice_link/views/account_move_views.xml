<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_move_form_reception" model="ir.ui.view">
        <field name="name">account.move.form.reception</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <!-- Smart button 'Recepciones' (solo facturas de proveedor) -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_open_receptions"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-truck"
                        invisible="move_type != 'in_invoice'">
                    <field name="picking_count" widget="statinfo" string="Recepciones"/>
                </button>
            </xpath>

            <!-- Botones en el header -->
            <xpath expr="//header" position="inside">

                <!-- Agregar nueva recepción a la factura -->
                <button name="action_link_reception"
                        type="object"
                        string="Agregar recepción"
                        class="btn-primary"
                        invisible="state != 'draft' or move_type != 'in_invoice'"/>

                <!-- Quitar todas las recepciones y sus líneas -->
                <button name="action_clear_receptions"
                        type="object"
                        string="Quitar recepciones"
                        class="btn-secondary"
                        invisible="picking_count == 0 or state != 'draft' or move_type != 'in_invoice'"/>

            </xpath>

        </field>
    </record>

</odoo>
