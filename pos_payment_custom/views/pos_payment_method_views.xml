<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="pos_payment_method_form_cash_adjustment" model="ir.ui.view">
        <field name="name">pos.payment.method.form.cash.adjustment</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group" position="inside">
                <group string="Descuentos y Recargos" col="2">
                    <field name="apply_adjustment"/>
                    <field name="adjustment_type" invisible="not apply_adjustment"/>
                    <field name="adjustment_value" invisible="not apply_adjustment"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>