<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ✅ Vista de lista para opciones de cuotas por tarjeta -->
    <record id="pos_payment_method_card_option_tree" model="ir.ui.view">
        <field name="name">pos.payment.method.card.option.tree</field>
        <field name="model">pos.payment.method.card.option</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="installments"/>
                <field name="percent"/>
                <field name="name"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- ✅ Vista de lista para tarjetas -->
    <record id="pos_payment_method_card_tree" model="ir.ui.view">
        <field name="name">pos.payment.method.card.tree</field>
        <field name="model">pos.payment.method.card</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="requires_coupon" string="Req. Cupón"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- ✅ Vista de formulario para tarjetas -->
    <record id="pos_payment_method_card_form" model="ir.ui.view">
        <field name="name">pos.payment.method.card.form</field>
        <field name="model">pos.payment.method.card</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" placeholder="ej: Visa, Mastercard, Naranja"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="requires_coupon"/>
                            <field name="active"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Opciones de Cuotas">
                            <field name="adjustment_option_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="installments" string="Cuotas"/>
                                    <field name="percent" string="Recargo (%)"/>
                                    <field name="name" string="Nombre del Plan"/>
                                    <field name="active"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Vista de formulario del método de pago SIMPLIFICADA -->
    <record id="pos_payment_method_form_adjustment" model="ir.ui.view">
        <field name="name">pos.payment.method.form.adjustment</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//group[@name='Payment methods']" position="after">
                <group string="Descuentos y Recargos" name="payment_adjustments">
                    
                    <field name="apply_adjustment"/>
                    
                    <field name="adjustment_type" 
                           invisible="not apply_adjustment"/>

                    <field name="adjustment_product_id"
                           invisible="not apply_adjustment or adjustment_type != 'surcharge'"
                           required="apply_adjustment and adjustment_type == 'surcharge'"
                           options="{'no_create': True, 'no_create_edit': True}"/>

                </group>

                <!-- Configuración de Tarjetas y Cuotas -->
                <notebook invisible="not apply_adjustment or adjustment_type != 'surcharge'">
                    <page string="Tarjetas y Cuotas">
                        <field name="card_ids" nolabel="1" context="{'default_payment_method_id': id}">
                            <form>
                                <group>
                                    <group>
                                        <field name="name" placeholder="ej: Visa, Mastercard, Naranja"/>
                                        <field name="sequence"/>
                                    </group>
                                    <group>
                                        <field name="requires_coupon"/>
                                        <field name="active"/>
                                    </group>
                                </group>
                                
                                <group string="Opciones de Cuotas" string_help="Formato de cupón fijo: 123-1234">
                                    <field name="adjustment_option_ids" nolabel="1" colspan="2">
                                        <list editable="bottom">
                                            <field name="sequence" widget="handle"/>
                                            <field name="installments" string="Cuotas"/>
                                            <field name="percent" string="Recargo (%)"/>
                                            <field name="name" string="Nombre del Plan"/>
                                            <field name="active"/>
                                        </list>
                                    </field>
                                </group>
                            </form>
                            
                            <list>
                                <field name="sequence" widget="handle"/>
                                <field name="name"/>
                                <field name="requires_coupon" string="Req. Cupón"/>
                                <field name="active"/>
                            </list>
                        </field>
                    </page>
                </notebook>
                
            </xpath>

        </field>
    </record>

</odoo>