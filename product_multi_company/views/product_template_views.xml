<?xml version="1.0"?>
<odoo>
    <record id="multi_company_form_product" model="ir.ui.view">
        <field name="name">multi.company.product.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field eval="1" name="priority"/>
        <field name="arch" type="xml">
            <xpath expr=
                "//group[@name='group_standard_price']/field[@name='company_id']" position="after">
                <field name="company_ids" string="Empresas Permitidas" widget="many2many_tags" options="{'no_create': True}"/>
            </xpath>
            <xpath expr="//group[@name='group_standard_price']/field[@name='company_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="product.product_comp_rule" model="ir.rule">
        <field name="name" >Product multi-company</field>
        <field name="model_id" ref="model_product_template"/>
        <field name="domain_force"> ['|', ('company_ids', 'in', company_ids), ('company_ids', '=', False)]</field>
    </record>
</odoo>         