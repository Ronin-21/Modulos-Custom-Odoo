<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Agregar campo de empresas permitidas en la vista de producto -->
    <record id="product_template_form_view_multi_company" model="ir.ui.view">
        <field name="name">product.template.form.multi.company</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            
            <field name="company_id" position="after">
                <field name="company_ids" widget="many2many_tags" 
                       options="{'no_create': True}"
                       help="Selecciona las empresas específicas que pueden usar este producto. Si está vacío, será visible para todas."/>
            </field>
            
        </field>
    </record>
    
</odoo>