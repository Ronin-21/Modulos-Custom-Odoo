<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_credit_approval_wizard_form" model="ir.ui.view">
        <field name="name">credit.approval.wizard.form</field>
        <field name="model">credit.approval.wizard</field>
        <field name="arch" type="xml">
            <form string="Aprobación de Límite de Crédito">
                <div class="alert alert-warning" role="alert">
                    <h4>⚠️ Límite de Crédito Excedido</h4>
                    <p>
                        Esta orden excede el límite de crédito autorizado por:
                        <strong><field name="difference"/></strong>
                    </p>
                    <p>¿Desea enviar esta orden para aprobación del límite de crédito?</p>
                </div>
                <footer>
                    <button string="✅ Enviar para Aprobación"
                            name="action_send_for_approval"
                            type="object"
                            class="btn-primary"/>
                    <button string="❌ Cancelar"
                            name="action_cancel"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
