        <!-- Configuración por defecto para la empresa principal -->
        <record id="report_template_config_default" model="report.template.config">
            <field name="company_id" ref="base.main_company"/>
            <field name="logo_text">AI</field>
            <field name="primary_color">#FF6B55</field>
            <field name="secondary_color">#ECF0F1</field>
            <field name="header_bg_color">#E8F5E9</field>
            <field name="accent_color">#FF6B00</field>

            <field name="enable_mrp_templates">False</field>
            <field name="mrp_template">clean</field>

            <field name="enable_sale_templates">True</field>
