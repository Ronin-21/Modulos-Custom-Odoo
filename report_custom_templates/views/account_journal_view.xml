<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_journal_form_fiscal_flag" model="ir.ui.view">
        <field name="name">account.journal.form.fiscal.flag</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <!-- lo ponemos cerca del tipo de diario -->
            <xpath expr="//field[@name='type']" position="after">
                <field name="show_fiscal_data"/>
            </xpath>
        </field>
    </record>
</odoo>
