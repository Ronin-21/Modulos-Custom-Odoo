<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- FORMULARIO CONFIGURACIÓN POR EMPRESA -->
    <record id="report_template_config_form" model="ir.ui.view">
        <field name="name">report.template.config.form</field>
        <field name="model">report.template.config</field>
        <field name="arch" type="xml">
            <form string="Configuración de Plantillas de Reportes">
                <header/>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="company_id" class="oe_inline" readonly="1"/>
                            <span> - Plantillas de Reportes</span>
                        </h1>
                    </div>

                    <notebook>
                        <page string="General">
                            <group>
                                <group string="Datos generales">
                                    <field name="company_id" readonly="1"/>
                                    <field name="active"/>
                                    <field name="logo_text" placeholder="AI"/>
                                </group>
                            </group>
                        </page>

                        <page string="Colores">
                            <group>
                                <group string="Esquema de colores">
                                    <field name="primary_color" widget="color"/>
                                    <field name="secondary_color" widget="color"/>
                                    <field name="header_bg_color" widget="color"/>
                                    <field name="accent_color" widget="color"/>
                                </group>
                                <group string="Ayuda">
                                    <p class="o_form_label">
                                        Elegí los colores que se usarán en las cabeceras y cuadros de
                                        información de los reportes.
                                    </p>
                                </group>
                            </group>
                        </page>

                        <page string="MRP">
                            <group>
                                <group string="Órdenes de Manufactura">
                                    <field name="enable_mrp_templates"/>
                                    <field name="mrp_template"/>
                                </group>
                            </group>
                        </page>

                        <page string="Ventas / Cotizaciones">
                            <group>
                                <group string="Cabecera de Ventas">
                                    <field name="enable_sale_templates"/>
                                    <field name="sale_logo_mode"/>
                                </group>
                                <group string="Descripción">
                                    <p class="o_form_label">
                                        - Si elegís <strong>Logo de la empresa (imagen)</strong>, se usa el logo
                                        configurado en la empresa.<br/>
                                        - Si elegís <strong>Logo definido por texto</strong>, se usa el campo
                                        <em>Texto del Logo</em> con los colores seleccionados.
                                    </p>
                                </group>
                            </group>
                        </page>

                        <page string="Compras">
                            <group>
                                <group string="Órdenes de Compra">
                                    <field name="enable_purchase_templates"/>
                                    <field name="purchase_template"/>
                                </group>
                            </group>
                        </page>

                        <page string="Pagos / Recibos">
                            <group>
                                <group string="Opciones de Pago">
                                    <field name="enable_payment_templates"/>
                                    <field name="show_payment_checks"/>
                                </group>
                                <group string="Descripción">
                                    <p class="o_form_label">
                                        Si activás <strong>Mostrar cheques en recibos</strong>, los recibos
                                        incluirán una tabla con los cheques utilizados.
                                    </p>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- LISTA -->
    <record id="report_template_config_tree" model="ir.ui.view">
        <field name="name">report.template.config.tree</field>
        <field name="model">report.template.config</field>
        <field name="arch" type="xml">
            <list string="Configuraciones de Plantillas">
                <field name="company_id"/>
                <field name="active"/>
                <field name="logo_text"/>
                <field name="enable_mrp_templates"/>
                <field name="enable_sale_templates"/>
                <field name="enable_purchase_templates"/>
                <field name="enable_payment_templates"/>
            </list>
        </field>
    </record>

    <!-- ACCIÓN Y MENÚ -->
    <record id="action_report_template_config" model="ir.actions.act_window">
        <field name="name">Configuración de Plantillas</field>
        <field name="res_model">report.template.config</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem
        id="menu_report_template_config"
        parent="base.menu_administration"
        name="Plantillas de Reportes"
        action="action_report_template_config"
        groups="base.group_system"
        sequence="100"/>

</odoo>
