<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- PERSONALIZACIÓN DEL HEADER PARA DISTINTOS DOCUMENTOS -->
    <template id="external_layout_wave_sale_clean" inherit_id="web.external_layout_wave">

        <!-- Reemplazamos el header principal -->
        <xpath expr="//div[@class='d-flex justify-content-between']" position="replace">
            
            <!-- Cargamos la config al inicio -->
            <t t-set="config" t-value="env['report.template.config'].get_config(company.id)"/>
            
            <div class="d-flex justify-content-between">

                <!-- CASO 1: PRESUPUESTOS (sale.order) -->
                <t t-if="o and o._name == 'sale.order'">
                    <div>
                        <!-- Modo TEXTO -->
                        <t t-if="config and config.enable_sale_templates and config.sale_logo_mode == 'text'">
                            <h2 style="margin:0; padding:0;" t-attf-style="color: #{config.primary_color or '#FF6B55'}; font-size: 42px; font-weight: bold;">
                                <t t-esc="config.logo_text or company.name"/>
                            </h2>
                        </t>
                        <!-- Modo IMAGEN -->
                        <t t-else="">
                            <img t-if="company.logo" 
                                 class="o_company_logo mb-2"
                                 t-att-src="image_data_uri(company.logo)" 
                                 alt="Logo"/>
                            <h2 t-else="" style="margin:0; padding:0;">
                                <t t-esc="company.name"/>
                            </h2>
                        </t>

                        <div t-if="company.report_header"
                             t-field="company.report_header"
                             class="o_company_tagline fw-bold">
                            Company tagline
                        </div>
                    </div>

                    <!-- Datos de empresa (derecha) -->
                    <div name="company_address" class="w-50 text-end">
                        <ul class="list-unstyled" name="company_address_list">
                            <li t-if="company.is_company_details_empty">
                                <span t-field="company.partner_id"
                                      t-options="{'widget': 'contact', 'fields': ['address', 'name'], 'no_marker': true}"/>
                            </li>
                            <li t-else="">
                                <span t-field="company.company_details"/>
                            </li>
                            <li t-if="forced_vat">
                                <t t-esc="company.country_id.vat_label or 'Tax ID'">Tax ID</t>:
                                <span t-esc="forced_vat">US12345671</span>
                            </li>
                        </ul>
                    </div>
                </t>

                <!-- CASO 2: FACTURAS SIN DATOS FISCALES -->
                <t t-elif="o and o._name == 'account.move' and not o.journal_id.show_fiscal_data">
                    <div>
                        <h2 style="margin:0; padding:0;" t-attf-style="color: #{config.primary_color or '#FF6B55'}; font-size: 42px; font-weight: bold;">
                            <t t-esc="config.logo_text or company.name or 'AI'"/>
                        </h2>
                    </div>
                    <!-- VACÍO: no mostrar dirección -->
                    <div name="company_address" class="w-50 text-end">
                    </div>
                </t>

                <!-- CASO 3: PAGOS CON DATOS FISCALES -->
                <t t-elif="o and o._name == 'account.payment' and o.journal_id.show_fiscal_data">
                    <div>
                        <img t-if="company.logo" 
                             class="o_company_logo mb-2"
                             t-att-src="image_data_uri(company.logo)" 
                             alt="Logo"/>
                        <div t-if="company.report_header"
                             t-field="company.report_header"
                             class="o_company_tagline fw-bold">
                            Company tagline
                        </div>
                    </div>
                    <div name="company_address" class="w-50 text-end">
                        <ul class="list-unstyled" name="company_address_list">
                            <li t-if="company.is_company_details_empty">
                                <span t-field="company.partner_id"
                                      t-options="{'widget': 'contact', 'fields': ['address', 'name'], 'no_marker': true}"/>
                            </li>
                            <li t-else="">
                                <span t-field="company.company_details"/>
                            </li>
                            <li t-if="forced_vat">
                                <t t-esc="company.country_id.vat_label or 'Tax ID'">Tax ID</t>:
                                <span t-esc="forced_vat">US12345671</span>
                            </li>
                        </ul>
                    </div>
                </t>

                <!-- CASO 4: PAGOS SIN DATOS FISCALES -->
                <t t-elif="o and o._name == 'account.payment' and not o.journal_id.show_fiscal_data">
                    <div>
                        <h2 style="margin:0; padding:0;" t-attf-style="color: #{config.primary_color or '#FF6B55'}; font-size: 42px; font-weight: bold;">
                            <t t-esc="config.logo_text or company.name or 'AI'"/>
                        </h2>
                    </div>
                    <!-- VACÍO: no mostrar dirección -->
                    <div name="company_address" class="w-50 text-end">
                    </div>
                </t>

                <!-- CASO 5: PURCHASE ORDERS -->
                <t t-elif="o and o._name == 'purchase.order'">
                    <div>
                        <img t-if="company.logo" 
                             class="o_company_logo mb-2"
                             t-att-src="image_data_uri(company.logo)" 
                             alt="Logo"/>
                        <div t-if="company.report_header"
                             t-field="company.report_header"
                             class="o_company_tagline fw-bold">
                            Company tagline
                        </div>
                    </div>
                    <div name="company_address" class="w-50 text-end">
                        <ul class="list-unstyled" name="company_address_list">
                            <li t-if="company.is_company_details_empty">
                                <span t-field="company.partner_id"
                                      t-options="{'widget': 'contact', 'fields': ['address', 'name'], 'no_marker': true}"/>
                            </li>
                            <li t-else="">
                                <span t-field="company.company_details"/>
                            </li>
                            <li t-if="forced_vat">
                                <t t-esc="company.country_id.vat_label or 'Tax ID'">Tax ID</t>:
                                <span t-esc="forced_vat">US12345671</span>
                            </li>
                        </ul>
                    </div>
                </t>

                <!-- CASO DEFAULT: FACTURAS FISCALES Y OTROS -->
                <t t-else="">
                    <!-- HEADER ORIGINAL DE ODOO (para facturas fiscales) -->
                    <div>
                        <img t-if="company.logo" 
                             class="o_company_logo mb-2"
                             t-att-src="image_data_uri(company.logo)" 
                             alt="Logo"/>
                        <div t-if="company.report_header"
                             t-field="company.report_header"
                             class="o_company_tagline fw-bold">
                            Company tagline
                        </div>
                    </div>
                    <div name="company_address" class="w-50 text-end">
                        <ul class="list-unstyled" name="company_address_list">
                            <li t-if="company.is_company_details_empty">
                                <span t-field="company.partner_id"
                                      t-options="{'widget': 'contact', 'fields': ['address', 'name'], 'no_marker': true}"/>
                            </li>
                            <li t-else="">
                                <span t-field="company.company_details"/>
                            </li>
                            <li t-if="forced_vat">
                                <t t-esc="company.country_id.vat_label or 'Tax ID'">Tax ID</t>:
                                <span t-esc="forced_vat">US12345671</span>
                            </li>
                        </ul>
                    </div>
                </t>

            </div>
        </xpath>

        <!-- Dirección simplificada para presupuestos -->
        <xpath expr="//t[@t-call='web.address_layout']" position="replace">
            <t t-if="o and o._name == 'sale.order'">
                <div class="row mb-3">
                    <div class="col-auto">
                        <span t-field="o.partner_id"
                              t-options="{'widget': 'contact', 'fields': ['name', 'address', 'phone'], 'no_marker': true}"/>
                    </div>
                </div>
            </t>
            <t t-else="">
                <t t-call="web.address_layout"/>
            </t>
        </xpath>

    </template>

    <!-- Cambiar título de presupuestos -->
    <template id="report_saleorder_document_clean" inherit_id="sale.report_saleorder_document">
        <xpath expr="//t[@t-set='layout_document_title']" position="replace">
            <t t-set="layout_document_title">
                <t t-if="doc">Presupuesto <t t-esc="doc.name"/></t>
                <t t-else="">Presupuesto</t>
            </t>
        </xpath>
    </template>

</odoo>