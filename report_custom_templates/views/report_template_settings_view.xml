<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- VISTA DE CONFIGURACIÓN EN SETTINGS -->
    <record id="res_config_settings_view_report_templates" model="ir.ui.view">
        <field name="name">res.config.settings.report.templates</field>
        <field name="model">res.config.settings</field>

        <!-- Vista base estándar de Ajustes -->
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>

        <field name="arch" type="xml">
            <!-- Patrón Odoo 17/18: insertar un <app> dentro del <form> -->
            <xpath expr="//form" position="inside">
                <app string="Plantillas de Reportes"
                     data-string="Plantillas de Reportes"
                     icon="fa-file-pdf-o"
                     name="report_templates_settings">

                    <!-- CONFIGURACIÓN GENERAL -->
                    <block title="Configuración General" name="general_settings">
                        <setting>
                            <field name="report_logo_text" placeholder="PM, EMPRESA, etc."/>
                            <div class="text-muted">
                                Texto que aparece como logo en los reportes.
                            </div>
                        </setting>
                    </block>

                    <!-- COLORES -->
                    <block title="Colores" name="color_settings">
                        <setting>
                            <field name="report_primary_color" widget="color"/>
                            <div class="text-muted">
                                Color principal para headers y elementos destacados.
                            </div>
                        </setting>
                        <setting>
                            <field name="report_secondary_color" widget="color"/>
                            <div class="text-muted">
                                Color para títulos y fondos secundarios.
                            </div>
                        </setting>
                        <setting>
                            <field name="report_header_bg_color" widget="color"/>
                            <div class="text-muted">
                                Color de fondo para headers de información.
                            </div>
                        </setting>
                        <setting>
                            <field name="report_accent_color" widget="color"/>
                            <div class="text-muted">
                                Color de acento para elementos secundarios.
                            </div>
                        </setting>
                    </block>

                    <!-- MRP -->
                    <block title="Órdenes de Manufactura (MRP)" name="mrp_settings">
                        <setting>
                            <field name="report_enable_mrp"/>
                            <div class="text-muted">
                                Activar plantillas personalizadas para MRP.
                            </div>
                        </setting>
                        <setting>
                            <field name="report_mrp_template"/>
                            <div class="text-muted">
                                Selecciona el diseño para reportes de manufactura.
                            </div>
                        </setting>
                    </block>

                    <!-- VENTAS -->
                    <block title="Órdenes de Venta" name="sale_settings">
                        <setting>
                            <field name="report_enable_sale"/>
                            <div class="text-muted">
                                Activar plantillas personalizadas para ventas.
                            </div>
                        </setting>
                            <setting>
                            <field name="report_sale_template"/>
                            <div class="text-muted">
                                Selecciona el diseño para reportes de ventas.
                            </div>
                        </setting>
                    </block>

                    <!-- COMPRAS -->
                    <block title="Órdenes de Compra" name="purchase_settings">
                        <setting>
                            <field name="report_enable_purchase"/>
                            <div class="text-muted">
                                Activar plantillas personalizadas para compras.
                            </div>
                        </setting>
                        <setting>
                            <field name="report_purchase_template"/>
                            <div class="text-muted">
                                Selecciona el diseño para reportes de compras.
                            </div>
                        </setting>
                    </block>

                    <!-- PAGOS -->
                    <block title="Recibos de Pago" name="payment_settings">
                        <setting>
                            <field name="report_enable_payment"/>
                            <div class="text-muted">
                                Activar plantillas personalizadas para pagos.
                            </div>
                        </setting>
                        <setting>
                            <field name="report_show_payment_checks"/>
                            <div class="text-muted">
                                Mostrar tabla detallada de cheques en recibos.
                            </div>
                        </setting>
                    </block>

                </app>
            </xpath>
        </field>
    </record>

</odoo>
