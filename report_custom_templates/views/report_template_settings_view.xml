<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- VISTA EN AJUSTES GENERALES -->
    <record id="res_config_settings_view_report_templates" model="ir.ui.view">
        <field name="name">res.config.settings.report.templates</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app string="Plantillas de Reportes"
                     data-string="Plantillas de Reportes"
                     name="report_templates_app">

                    <!-- COLORES -->
                    <block title="Colores y estilo" name="colors_block">
                        <setting>
                            <field name="report_logo_text"/>
                            <div class="text-muted">
                                Texto corto para usar como logo en la cabecera de los reportes.
                            </div>
                        </setting>
                        <setting>
                            <field name="report_primary_color" widget="color"/>
                            <div class="text-muted">
                                Color primario para encabezados.
                            </div>
                        </setting>
                        <setting>
                            <field name="report_secondary_color" widget="color"/>
                            <div class="text-muted">
                                Color secundario para títulos.
                            </div>
                        </setting>
                        <setting>
                            <field name="report_header_bg_color" widget="color"/>
                            <div class="text-muted">
                                Color de fondo de cuadros de información.
                            </div>
                        </setting>
                        <setting>
                            <field name="report_accent_color" widget="color"/>
                            <div class="text-muted">
                                Color de acento para pequeños detalles.
                            </div>
                        </setting>
                    </block>

                    <!-- MRP -->
                    <block title="Órdenes de Manufactura (MRP)" name="mrp_settings">
                        <setting>
                            <field name="report_enable_mrp"/>
                            <div class="text-muted">
                                Activar plantillas personalizadas para MRP.
                            </div>
                        </setting>
                        <setting>
                            <field name="report_mrp_template"/>
                            <div class="text-muted">
                                Selecciona el diseño para las órdenes de manufactura.
                            </div>
                        </setting>
                    </block>

                    <!-- VENTAS -->
                    <block title="Órdenes de Venta / Cotizaciones" name="sale_settings">
                        <setting>
                            <field name="report_enable_sale"/>
                            <div class="text-muted">
                                Activar cabecera personalizada para cotizaciones y pedidos.
                            </div>
                        </setting>
                        <setting>
                            <field name="report_sale_logo_mode"/>
                            <div class="text-muted">
                                Elegí si el encabezado usa el logo de imagen de la empresa o el texto configurado.
                            </div>
                        </setting>
                    </block>

                    <!-- COMPRAS -->
                    <block title="Órdenes de Compra" name="purchase_settings">
                        <setting>
                            <field name="report_enable_purchase"/>
                            <div class="text-muted">
                                Activar plantillas personalizadas para compras.
                            </div>
                        </setting>
                        <setting>
                            <field name="report_purchase_template"/>
                            <div class="text-muted">
                                Selecciona el diseño para las órdenes de compra.
                            </div>
                        </setting>
                    </block>

                    <!-- PAGOS -->
                    <block title="Recibos de Pago" name="payment_settings">
                        <setting>
                            <field name="report_enable_payment"/>
                            <div class="text-muted">
                                Activar plantillas personalizadas para pagos.
                            </div>
                        </setting>
                        <setting>
                            <field name="report_show_payment_checks"/>
                            <div class="text-muted">
                                Mostrar tabla detallada de cheques en los recibos.
                            </div>
                        </setting>
                    </block>

                </app>
            </xpath>
        </field>
    </record>

</odoo>
