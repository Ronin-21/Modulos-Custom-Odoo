<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- REPORTE LIMPIO PARA √ìRDENES DE MANUFACTURA MRP -->
    <template id="report_mrporder_clean" inherit_id="mrp.report_mrporder">
        
        <!-- Cambiar el layout interno por el limpio (sin header) -->
        <xpath expr="//t[@t-call='web.internal_layout']" position="attributes">
            <attribute name="t-call">report_sale_invoice_cleaner.internal_layout_mrp_clean</attribute>
        </xpath>
        
        <!-- Reemplazar primer div.row (header) -->
        <xpath expr="//div[@class='row'][1]" position="replace">
            <!-- BANNER SUPERIOR VISIBLE -->
            <div style="background-color: #2C3E50; color: white; padding: 20px; margin-bottom: 20px; margin-top: 0; border-radius: 5px; text-align: center;">
                <h1 style="margin: 0; font-size: 28px; font-weight: bold;">ORDEN DE MANUFACTURA</h1>
                <p style="margin: 5px 0 0 0; font-size: 12px;">Reporte Personalizado - Sistema PM Argentina</p>
            </div>
            
            <!-- HEADER CON NOMBRE Y C√ìDIGO DE BARRAS -->
            <div class="row" style="margin-bottom: 20px; padding: 15px; background-color: #ECF0F1; border-left: 5px solid #FF6B00;">
                <div class="col-7">
                    <h2 style="margin: 0; color: #2C3E50;"><span t-field="o.name">MRP-001</span></h2>
                    <p style="margin: 5px 0 0 0; color: #7F8C8D; font-size: 12px;">Identificaci√≥n de la Orden</p>
                </div>
                <div class="col-5">
                    <div style="text-align: right; padding: 10px; background-color: white; border-radius: 5px;">
                        <span t-field="o.name" t-options="{'widget': 'barcode', 'width': 600, 'height': 100, 'img_style': 'width:350px;height:60px'}">Package barcode</span>
                    </div>
                </div>
            </div>
        </xpath>
        
        <!-- Cambiar primer row mt32 mb32 (Responsable, Source, etc) -->
        <xpath expr="//div[@class='row mt32 mb32'][1]" position="replace">
            <div class="row mt32 mb32" style="background-color: #F8F9FA; padding: 15px; border-radius: 5px; margin-bottom: 20px;">
                <div class="col-3" t-if="o.date_start or o.date_planned_start">
                    <strong style="color: #FF6B00;">Fecha Orden:</strong><br/>
                    <span t-field="o.date_start" t-options="{'widget': 'date'}" style="font-size: 14px;">2023-09-15</span>
                    <span t-if="not o.date_start" t-field="o.date_planned_start" t-options="{'widget': 'date'}" style="font-size: 14px;">2023-09-15</span>
                </div>
                <div class="col-3" t-if="o.origin">
                    <strong style="color: #FF6B00;">Origen:</strong><br/>
                    <span t-field="o.origin" style="font-size: 14px;">Vendor ABC</span>
                </div>
                <div class="col-3" t-if="o.user_id">
                    <strong style="color: #FF6B00;">Responsable:</strong><br/>
                    <span t-field="o.user_id" style="font-size: 14px;">John Doe</span>
                </div>
                <div class="col-3">
                    <strong style="color: #FF6B00;">Estado:</strong><br/>
                    <span t-field="o.state" style="font-size: 14px; text-transform: uppercase; font-weight: bold; color: #2C3E50;">Draft</span>
                </div>
            </div>
        </xpath>
        
        <!-- Cambiar segundo row mt32 mb32 (Producto, Cantidad) -->
        <xpath expr="//div[@class='row mt32 mb32'][2]" position="replace">
            <div class="row mt32 mb32" style="background-color: #FFF3E0; padding: 15px; border-radius: 5px; margin-bottom: 20px; border: 2px solid #FF6B00;">
                <div class="col-3">
                    <strong style="color: #FF6B00;">Producto:</strong><br/>
                    <span t-field="o.product_id" style="font-size: 14px; font-weight: bold;">Laptop Model X</span>
                </div>
                <div class="col-3">
                    <strong style="color: #FF6B00;">Cantidad:</strong><br/>
                    <span t-field="o.product_qty" style="font-size: 16px; font-weight: bold; color: #2C3E50;">100</span>
                    <span t-field="o.product_uom_id.name" groups="uom.group_uom" style="font-size: 14px;"> Units</span>
                </div>
                <div class="col-3" t-if="o.lot_producing_id">
                    <strong style="color: #FF6B00;">Lote:</strong><br/>
                    <span t-field="o.lot_producing_id" style="font-size: 14px; font-weight: bold;">LOT-001</span>
                </div>
                <div class="col-3" t-if="o.product_id.barcode">
                    <strong style="color: #FF6B00;">C√≥digo Barras:</strong><br/>
                    <span t-field="o.product_id.barcode" t-options="{'widget': 'barcode', 'width': 600, 'height': 100, 'img_style': 'width:100%;height:35px'}" style="font-size: 12px;">123456789</span>
                </div>
            </div>
        </xpath>
        
        <!-- Cambiar t√≠tulo de Operaciones -->
        <xpath expr="//h3" position="replace">
            <h3 style="background-color: #FF6B00; color: white; padding: 15px; margin: 30px 0 20px 0; border-radius: 5px; text-transform: uppercase; font-weight: bold;">
                <t t-if="o.state == 'done'">‚úì Operaciones Completadas</t>
                <t t-elif="o.is_planned">üìã Operaciones Planificadas</t>
                <t t-else="">‚öôÔ∏è Operaciones</t>
            </h3>
        </xpath>
        
    </template>

</odoo>