<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- REPORTE SIMPLE PARA COMPONENTES DE PRODUCCIÓN - SIN ESTILOS -->
    <template id="report_mrp_production_components_clean" inherit_id="mrp.report_mrp_production_components">
        
        <!-- Cambiar el título -->
        <xpath expr="//h3" position="replace">
            <h3>
                <span>Componentes</span>
            </h3>
        </xpath>
        
        <!-- Cambiar thead -->
        <xpath expr="//thead" position="replace">
            <thead>
                <tr>
                    <th>Producto</th>
                    <th t-if="o.state in ('progress', 'to_close','done')" t-attf-class="{{ 'text-end' if not has_product_barcode else '' }}">Consumido</th>
                    <th t-attf-class="{{ 'text-end' if not has_product_barcode else '' }}">A Consumir</th>
                    <th t-if="has_product_barcode" width="15%" class="text-center">Código de Barras</th>
                </tr>
            </thead>
        </xpath>
        
        <!-- Cambiar tbody -->
        <xpath expr="//tbody" position="replace">
            <tbody>
                <tr t-foreach="o.move_raw_ids" t-as="raw_line">
                    <td>
                        <span t-field="raw_line.product_id">8 GB RAM</span>
                    </td>
                    <td t-attf-class="{{ 'text-end' if not has_product_barcode else '' }}" t-if="o.state in ('progress', 'to_close','done')">
                        <div>
                            <span t-field="raw_line.quantity">2</span>
                        </div>
                    </td>
                    <td t-attf-class="{{ 'text-end' if not has_product_barcode else '' }}">
                        <span t-field="raw_line.product_uom_qty">25</span>
                        <span t-field="raw_line.product_uom" groups="uom.group_uom">Piezas</span>
                    </td>
                    <td t-if="has_product_barcode" width="15%" class="text-center">
                        <t t-if="raw_line.product_id.barcode">
                            <span t-field="raw_line.product_id.barcode" t-options="{'widget': 'barcode', 'width': 600, 'height': 100, 'img_style': 'width:100%;height:35px'}">12345678901</span>
                        </t>
                    </td>
                </tr>
            </tbody>
        </xpath>
        
    </template>

</odoo>